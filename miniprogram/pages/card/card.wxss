/* pages/card/card.wxss */

.title {
    text-align: center;
}

.card {
    margin: 10px;
    position: relative;
}

.bg {
    /* position: relative; */
    width: 100%;
    border-color: black;
    border-radius: 5px;
    box-shadow: 0 0 5px #5F687E;
}

.logo {
    position:absolute;
    width: 90px;
    height: 60px;
    top: 10px;
    right: 20px;
}

.body {
    position:absolute;
    left: 20px;
    bottom: 20px;
    line-height: 2;
    font-weight: bold;
    color: #5F687E;
}

.name {
    color: #5F687E;
}

.phone {
    color: #5F687E;
}

.email {
    color: #5F687E;
}